<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="false" android:state_focused="false">
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/gray_1"
				android:endColor="@color/gray_2" android:angle="270" />
			<corners android:radius="3dp" />
		</shape>
	</item>
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/yellow_1"
				android:endColor="@color/yellow_2" android:angle="270" />
			<corners android:radius="3dp" />	
		</shape>
	</item>
	<item android:state_focused="true">
		<shape android:shape="rectangle">
			<gradient android:startColor="@color/orange_1"
				android:endColor="@color/orange_2" android:angle="270" />
			<corners android:radius="3dp" />	
		</shape>
	</item>
</selector>