<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:gravity="center_vertical|center_horizontal">


	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:minWidth="400dp"
		android:paddingTop="5dp" android:paddingBottom="5dp" android:gravity="center_vertical">

		<EditText android:id="@android:id/edit" android:layout_width="0px"
			android:layout_weight="0.33" android:layout_height="wrap_content"
			android:textSize="18sp" android:singleLine="true" android:inputType="numberSigned"
			android:text="0" />

		<Button android:id="@android:id/button1" android:layout_width="0px"
			android:layout_weight="0.165" android:layout_height="wrap_content"
			android:text="+1" android:textStyle="bold" />

		<Button android:id="@android:id/button2" android:layout_width="0px"
			android:layout_weight="0.165" android:layout_height="wrap_content"
			android:text="+5" android:textStyle="bold" />

		<Button android:id="@android:id/button3" android:layout_width="0px"
			android:layout_weight="0.165" android:layout_height="wrap_content"
			android:text="+10" android:textStyle="bold" />

		<Button android:id="@+id/button4" android:layout_width="0px"
			android:layout_weight="0.165" android:layout_height="wrap_content"
			android:text="+20" android:textStyle="bold" />
	</LinearLayout>


	</LinearLayout>