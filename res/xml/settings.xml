<!-- This is a primitive example showing the different types of preferences 
	available. -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory android:title="@string/pref_cat_basic"/>

	<com.nolanlawson.keepscore.widget.IntegerEditTextPreference android:key="@string/pref_button_1"
		android:title="@string/pref_button_1_name" android:defaultValue="@string/pref_button_1_default"
		android:persistent="true"/>
	
	<com.nolanlawson.keepscore.widget.IntegerEditTextPreference android:key="@string/pref_button_2"
		android:title="@string/pref_button_2_name" android:defaultValue="@string/pref_button_2_default"
		android:persistent="true"/>
		
	<com.nolanlawson.keepscore.widget.IntegerEditTextPreference android:key="@string/pref_button_3"
		android:title="@string/pref_button_3_name" android:defaultValue="@string/pref_button_3_default"
		android:persistent="true"/>
		
	<com.nolanlawson.keepscore.widget.IntegerEditTextPreference android:key="@string/pref_button_4"
		android:title="@string/pref_button_4_name" android:defaultValue="@string/pref_button_4_default"
		android:persistent="true"/>		
	
	<PreferenceCategory android:title="@string/pref_cat_advanced"/>
	
	<com.nolanlawson.keepscore.widget.NonnegativeIntegerEditTextPreference android:key="@string/pref_update_delay"
		android:title="@string/pref_update_delay_name" android:defaultValue="@string/pref_update_delay_default"
		android:persistent="true" android:summary="@string/pref_update_delay_summary"/>
		
	<CheckBoxPreference android:key="@string/pref_use_wake_lock"
		android:title="@string/pref_use_wake_lock_name" android:defaultValue="@string/pref_use_wake_lock_default"
		android:persistent="true" android:summary="@string/pref_use_wake_lock_summary"/>	
		
</PreferenceScreen>
